{
    "name": "herd/comments",
    "description": "A Laravel package for managing comments with Livewire integration",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "comments",
        "livewire"
    ],
    "homepage": "https://github.com/herd/comments",
    "authors": [
        {
            "name": "Herd",
            "email": "info@herd.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Herd\\Comments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Herd\\Comments\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Herd\\Comments\\CommentsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
