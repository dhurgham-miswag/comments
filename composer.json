{
    "name": "dhurgham-miswag/comments",
    "description": "A Laravel package for managing comments with Livewire integration",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "comments",
        "livewire",
        "comments-system",
        "laravel-package"
    ],
    "homepage": "https://github.com/dhurgham-miswag/comments",
    "authors": [
        {
            "name": "Dhurgham",
            "email": "dhurghambit@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "DhurghamMiswag\\Comments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DhurghamMiswag\\Comments\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DhurghamMiswag\\Comments\\CommentsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "version": "1.0.0"
}
